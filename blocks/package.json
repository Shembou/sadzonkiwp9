{
	"name": "sections",
	"version": "0.1.0",
	"description": "Example block scaffolded with Create Block tool.",
	"author": "The WordPress Contributors",
	"license": "GPL-2.0-or-later",
	"main": "build/index.js",
	"scripts": {
		"build": "wp-scripts build && npm run build-blocks:prod",
		"format": "wp-scripts format",
		"lint:css": "wp-scripts lint-style",
		"lint:js": "wp-scripts lint-js",
		"packages-update": "wp-scripts packages-update",
		"plugin-zip": "wp-scripts plugin-zip",
		"start": "npm run build-blocks & wp-scripts start",
		"blocks-manifest:atoms": "wp-scripts build-blocks-manifest --input=src/atoms --output=manifests/atoms-blocks-manifest.php",
		"blocks-manifest:sections": "wp-scripts build-blocks-manifest --input=src/sections --output=manifests/sections-blocks-manifest.php",
		"blocks-manifest:components": "wp-scripts build-blocks-manifest --input=src/components --output=manifests/components-blocks-manifest.php",
		"build-blocks": "npm run blocks-manifest:atoms && npm run blocks-manifest:sections && npm run blocks-manifest:components",

		"blocks-manifest:atoms-prod": "wp-scripts build-blocks-manifest --input=src/atoms --output=build/atoms-blocks-manifest.php",
		"blocks-manifest:sections-prod": "wp-scripts build-blocks-manifest --input=src/sections --output=build/sections-blocks-manifest.php",
		"blocks-manifest:components-prod": "wp-scripts build-blocks-manifest --input=src/components --output=build/components-blocks-manifest.php",
		"build-blocks:prod": "npm run blocks-manifest:atoms-prod && npm run blocks-manifest:sections-prod && npm run blocks-manifest:components-prod"
	},
	"devDependencies": {
		"@wordpress/scripts": "^30.22.0"
	},
	"dependencies": {
		"@tailwindcss/cli": "^4.1.12",
		"swiper": "^11.2.10",
		"tailwindcss": "^4.1.12"
	}
}